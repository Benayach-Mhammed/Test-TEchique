@page
@model Test.Views.Admin.DeleteModel
@{
    ViewData["Title"] = "Supprimer le candidat";
}

<h1>Supprimer le candidat</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce candidat ?</h3>
<div>
    <h4>Informations sur le candidat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Candidate.Nom</dd>

        <dt class="col-sm-2">Prénom</dt>
        <dd class="col-sm-10">@Model.Candidate.Prenom</dd>

        <dt class="col-sm-2">Mail</dt>
        <dd class="col-sm-10">@Model.Candidate.Mail</dd>

        <dt class="col-sm-2">Téléphone</dt>
        <dd class="col-sm-10">@Model.Candidate.Telephone</dd>

        <dt class="col-sm-2">Niveau d'étude</dt>
        <dd class="col-sm-10">@Model.Candidate.NiveauEtude</dd>

        <dt class="col-sm-2">Années d'expérience</dt>
        <dd class="col-sm-10">@Model.Candidate.AnneesExperience</dd>

        <dt class="col-sm-2">Dernier employeur</dt>
        <dd class="col-sm-10">@Model.Candidate.DernierEmployeur</dd>

        <dt class="col-sm-2">Chemin du CV</dt>
        <dd class="col-sm-10">@Model.Candidate.CVPath</dd>

     
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Candidate.Mail" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-page="./Index" class="btn btn-secondary">Annuler</a>
</form>
